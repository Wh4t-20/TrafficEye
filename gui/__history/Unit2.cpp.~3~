//---------------------------------------------------------------------------
void __fastcall TForm2::backButtonClick(TObject *Sender)
{
 this->Hide();
 mainMenu->Show();
}
//---------------------------------------------------------------------------

void __fastcall TForm2::searchViolationClick(TObject *Sender)
{
 String input = InputBox("Enter Violation", "Violation:", "");
	if (!input.IsEmpty()) {
		// Optionally store or display the input
		ShowMessage("You entered: " + input);
		// You can assign it to a variable or use it in SQL later
	}
}
